---
import { getFormattedDate, formatToPersianDate } from "@/utils/date";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"time"> & {
	date: Date;
	dateTimeOptions?: Intl.DateTimeFormatOptions;
	dir?: "ltr" | "rtl";
};

const { date, dateTimeOptions, dir, ...attrs } = Astro.props;

const postDate =
	dir === "rtl"
		? formatToPersianDate(date)
		: getFormattedDate(date, dateTimeOptions);
const ISO = date.toISOString();
---

<time datetime={ISO} title={ISO} {...attrs}>{postDate}</time>
