---
import { Icon } from "astro-icon/components";
---

<div
	id="auth-modal"
	class="bg-global-bg/40 text-accent fixed inset-0 z-50 flex hidden items-center justify-center backdrop-blur-sm"
>
	<div class="bg-global-bg w-full max-w-md rounded-lg p-8 shadow-lg">
		<div class="flex justify-end">
			<button
				id="close-modal"
				class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
			>
				<Icon name="mdi:close" class="h-6 w-6" />
			</button>
		</div>
		<h2 class="mb-4 text-center text-2xl font-bold">Sign In</h2>
		<form>
			<div class="mb-4">
				<label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 text-m font-bold"
					>Email</label
				>
				<input
					type="email"
					id="email"
					class="mt-1 block w-full rounded-md border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-accent focus:outline-none focus:ring-accent dark:border-gray-600 dark:bg-gray-700 sm:text-sm"
				/>
			</div>
			<div class="mb-6">
				<label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 text-m font-bold"
					>Password</label
				>
				<input
					type="password"
					id="password"
					class="mt-1 block w-full rounded-md border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-accent focus:outline-none focus:ring-accent dark:border-gray-600 dark:bg-gray-700 sm:text-sm"
				/>
			</div>
			<button
				type="submit"
				class="w-full flex justify-center rounded-md border border-transparent bg-accent px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-accent/65 focus:outline-none focus:ring-2 focus:ring-accent/50 focus:ring-offset-2 mb-4 text-center text-2xl font-bold text-m font-bold"
			>
				Sign In
			</button>
		</form>
		<div class="mt-6">
			<div class="relative">
				<div class="absolute inset-0 flex items-center">
					<div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
				</div>
				<div class="relative flex justify-center text-sm">
					<span
						class="text-accent/85 bg-global-bg/85 px-2 text-gray-500 backdrop-blur-sm dark:text-gray-400 text-m font-bold"
					>
						Or continue with
					</span>
				</div>
			</div>
			<div class="mt-6">
				<a
					href="#"
					class="w-full flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600 text-m font-bold hover:bg-accent/65 focus:outline-none focus:ring-2 focus:ring-accent/50 focus:ring-offset-2"
				>
					<Icon name="mdi:google" class="mr-2 h-5 w-5 focus:border-accent focus:outline-none focus:ring-accent " />
					Google
				</a>
			</div>
		</div>
	</div>
</div>