---
import { siteConfig } from "@/site.config";
import MenuLinks from "../MenuLinks.astro";

const year = new Date().getFullYear();
---

<footer
	class="sm:text-s mt-auto flex w-full flex-col items-center justify-center gap-y-2 pt-20 pb-4 text-center align-top font-semibold text-gray-600 sm:flex-row sm:justify-between dark:text-gray-400"
>
	<div class="me-0 sm:me-4">
		&copy; {siteConfig.author}
		{year}.<span class="inline-block"
			>&nbsp;<img src="/icon2.png" alt="Site icon" class="inline h-7 w-7" />&nbsp;{
				siteConfig.title
			}</span
		>
	</div>
	<nav
		aria-labelledby="footer_links"
		class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
	>
		<p id="footer_links" class="sr-only">More on this site</p>
		<MenuLinks />
	</nav>
</footer>
